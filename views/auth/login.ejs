<%- include('../includes/header.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>


    <!-- Page content-->
    <div class="container py-4">
        <main class="form-signin w-100 m-auto">
            <form action="/login" method="POST" novalidate>
                <img class="mb-4" src="/images/logo.webp" alt="" width="72" height="57">
                <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
                <% if (loginError) { %>
                <h1 class="h6 mb-3 fw-normal text-danger">Error logging in, please try again</h1>
                <% } %>
                <div class="form-floating">
                    <input type="text" class="form-control top <%= validationErrors.find( e => e.path === 'username') ? 'invalid' : '' %>" placeholder="Username" name="username" id="username" value="<%= oldInput.username %>">
                    <label for="username">Username</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control bottom <%= validationErrors.find( e => e.path === 'password') ? 'invalid' : '' %>" placeholder="Password" name="password" id="password">
                    <label for="password">Password</label>
                </div>
                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" value="true" id="remember" name="remember" <% if (oldInput.remember) { %>checked<% } %>>
                    <label class="form-check-label" for="remember">
                        Remember me
                    </label>
                </div>
                <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
                <p class="mt-5 mb-3 text-body-secondary">&copy; 2024</p>
            </form>
        </main>
    </div>


    <%- include('../includes/footer.ejs') %>

</body>

</html>