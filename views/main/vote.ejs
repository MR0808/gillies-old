<%- include('../includes/header.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>

    <!-- Page content-->
    <div class="container py-4">
        <main class="form-main w-300 m-auto">
            <div class="container">
                <h4 class="mt-5"><%=meeting.meetingDate %></h4>
                <h4><%=meeting.meetingLocation %></h4>
            </div>
            <div class="table-responsive small">
                <div class="container text-center">
                    <div class="row table-head">
                        <div class="col-4">
                            Whisky
                        </div>
                        <div class="col-6">
                            Vote
                        </div>
                        <div class="col-2">
                            Your Score
                        </div>
                    </div>
                    <% for (let whisky of whiskies) { %>
                    <div class="row striped">
                        <div class="col-4">
                            <%=whisky.name %>
                        </div>
                        <div class="col-6">
                            <form class="row row-cols-lg-auto g-3 align-items-center" action="/vote" method="post">
                                <div class="col-6">
                                    <label class="visually-hidden" for="score">Score</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="score" name="score" placeholder="Score" min="1" max="10" step="0.1">
                                        <input type="hidden" id="whiskyId" name="whiskyId" value="<%=whisky._id %>">
                                    </div>
                                </div>
                                <div class="col-2">
                                    <button type="submit" class="btn btn-primary">Vote</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-2">
                            <% if (whisky.votes[0]) { %>
                            <%=whisky.votes[0].score %>
                            <% } %>
                        </div>
                    </div>
                    <% } %>

                </div>
            </div>
        </main>
    </div>

    <%- include('../includes/footer.ejs') %>

</body>

</html>